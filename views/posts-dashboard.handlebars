{{> header}}

<a href="/dashboard" class="btn bg-sky-500 block hover:bg-sky-800 rounded py-2 px-2 mt-1 max-w-fit">View My Challenges</a>
<div class="flex justify-evenly">
{{#if posts.length}}
<section>
  <h2 class="bold text-3xl">Your Posts</h2>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/posts/edit/{{post.id}}" class="btn bg-sky-500 block hover:bg-sky-800 rounded py-2 px-2 mt-3  max-w-fit ">Edit post</a> </br> </br>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}
</div>
{{> footer}}