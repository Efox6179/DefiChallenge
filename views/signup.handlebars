{{> header}}
<div class="flex justify-center mt-10 lg:mt-40">
    <div class="bg-white rounded shadow-2xl p-8 m-20">
        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">Sign Up!</h1>
        <form class="signup-form">
            <div class="flex flex-col mb-4">
                <label class="mb-2 font-bold text-lg text-gray-900" for="username-signup">Username</label>
                <input class="border py-2 px-3 text-grey-800 rounded" type="text" id="username-signup" placeholder="Make it Unique!">
            </div>
           
            <div class="flex flex-col mb-4">
                <label class="mb-2 font-bold text-lg text-gray-900" for="password-signup">Password</label>
                <input class="border py-2 px-3 text-grey-800 rounded" type="password" id="password-signup" placeholder="Remember me ;)">
            </div>
            <button type="submit" class="block bg-sky-500 hover:bg-sky-600 text-white uppercase text-lg mx-auto p-4 rounded">Create Account</button>
        </form>
        <a href="/login" class="hover:text-indigo-700">Already Have an Account? Log In Here!</a>
    </div>
</div>



{{> footer}}

<script src="/javascript/signup.js"></script>