{{> header}}
<div class="flex justify-center mt-40">
    <div class="w-1/4 bg-white rounded shadow-2xl p-8 m-20">
        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">Login</h1>
        <form class="login-form">
            <div class="flex flex-col mb-4">
                <label class="mb-2 font-bold text-lg text-gray-900" for="username-login">Username</label>
                <input class="border py-2 px-3 text-grey-800 rounded" type="text" id="username-login" placeholder="Username"/>
            </div>
           
            <div class="flex flex-col mb-4">
                <label class="mb-2 font-bold text-lg text-gray-900" for="password-login">Password</label>
                <input class="border py-2 px-3 text-grey-800 rounded" type="password" id="password-login" placeholder="Password"/>
            </div>
            <button type="submit" class="block bg-sky-500 hover:bg-sky-600 text-white uppercase text-lg mx-auto p-4 rounded">Login</button>
        </form>
        <a href="/signup">Need to Sign Up?</a>
    </div>
</div>



{{> footer}}

<script src="/javascript/login.js"></script>
